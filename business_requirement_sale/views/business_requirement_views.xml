<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_business_requirement_form" model="ir.ui.view">
        <field name="model">business.requirement</field>
        <field
            name="inherit_id"
            ref="business_requirement.view_business_requirement_form"
        />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <xpath expr='//div[@name="button_box"]' position='inside'>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="open_orders"
                    icon="fa-usd"
                    attrs="{'invisible': [('sale_order_count', '=', 0)]}"
                >
                    <field name="sale_order_count" string="Sales" widget="statinfo" />
                </button>
                <br />
            </xpath>
            <field name="state" position="before">
                <button
                    string="Create Quotation"
                    name="%(action_business_requirement_create_sale)d"
                    type="action"
                    class="btn-primary"
                />
            </field>
        </field>
    </record>
</odoo>
