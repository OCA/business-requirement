<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_business_requirement_form" model="ir.ui.view">
        <field name="name">business.requirement.form</field>
        <field name="model">business.requirement</field>
        <field name="inherit_id"
               ref="business_requirement.view_business_requirement_form"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@name="buttons"]' position='inside'>
                <button class="oe_inline oe_stat_button"
                    type="object" name="open_orders" icon="fa-tasks"
                    attrs="{'invisible': [('order_count', '=', 0)]}">
                    <field name="order_count" string="Orders"
                        widget="statinfo"
                        modifiers="{'readonly': true}"/>
                </button>
                <br/>
            </xpath>
            <field name="state" position="before">
                <button string="Create Quotation"
                        name="launch_convert_wizard"
                        type="object" class="btn-primary"/>
            </field>
            <field name="reviewer_ids" position="after">
                <field name="detailed_order"/>
            </field>
        </field>
    </record>

    <record id="view_business_requirement_deliverable_form" model="ir.ui.view">
        <field name="name">business.requirement.deliverable.form</field>
        <field name="model">business.requirement.deliverable</field>
        <field name="inherit_id"
               ref="business_requirement_deliverable.view_business_requirement_deliverable_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="business_requirement_id"]' position='after'>
                <field name="sale_order_line_id"/>
            </xpath>
        </field>
    </record>

</odoo>
