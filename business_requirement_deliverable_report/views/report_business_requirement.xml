<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="internal_layout_br_header">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>
                    <div class="col-xs-6 text-center">
                        <span t-esc="company.name"/>
                    </div>
                    <div class="col-xs-2 col-xs-offset-1 text-right">
                        <ul class="list-inline">
                            <li><span class="page"/></li>
                            <li>/</li>
                            <li><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </div>
            <t t-raw="0" />
        </template>

        <template id="layout_br_base">
            <h3><span t-field="o.name"/>-<span t-field="o.description"/></h3>
            <table class="table table-bordered" style="table-collapse:collapse; table-layout:fixed">
                <tbody>
                    <tr>
                        <th colspan="3">Customer</th>
                        <th colspan="3">Project</th>
                    </tr>
                    <tr>
                        <td colspan="3"><span t-field="o.partner_id.name"/> </td>
                        <td colspan="3"><span t-field="o.project_id.name"/> </td>
                    </tr>

                    <tr>
                        <th colspan="2">Change Request</th>
                        <th colspan="4">Category</th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <t t-if="o.change_request">Yes</t>
                            <t t-if="not o.change_request">No</t>
                        </td>
                        <td colspan="4">
                            <span t-esc="', '.join([cate.name for cate in o.category_ids])"/>
                        </td>
                    </tr>
                    <tr>
                        <th class="text-center" colspan="2">Creation</th>
                        <th class="text-center" colspan="2">Confirmation</th>
                        <th class="text-center" colspan="2">Approval</th>
                    </tr>
                    <tr>
                        <th >Date</th>
                        <th >User</th>
                        <th >Date</th>
                        <th >User</th>
                        <th >Date</th>
                        <th >User</th>
                    </tr>
                    <tr>
                        <td >
                            <span t-field="o.create_date"/>
                        </td>
                        <td>
                            <span t-field="o.create_uid.name"/>
                        </td>
                        <td >
                            <span t-field="o.confirmation_date"/>
                        </td>
                        <td>
                            <span t-field="o.confirmed_id.name"/>
                        </td>
                        <td >
                            <span t-field="o.approval_date"/>
                        </td>
                        <td>
                            <span t-field="o.approved_id.name"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <t t-if="o.business_requirement">
                <h3>Customer Story:</h3>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td><span t-field="o.business_requirement"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>

            <t t-if="o.scenario">
                <h3>Scenario:</h3>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td><span t-field="o.scenario"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>

            <t t-if="o.gap">
                <h3>Gap:</h3>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td><span t-field="o.gap"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </template>

        <template id="br_report">
            <t t-call="report.html_container">
                <t t-call="business_requirement_deliverable_report.internal_layout_br_header">
                    <div class="page" name="page">
                        <h2 class="text-center">Business Requirement Document</h2><br/>
                        <t t-foreach="docs" t-as="o">
                            <div style="page-break-after: always;">            
                                <t t-call="business_requirement_deliverable_report.layout_br_base">
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
