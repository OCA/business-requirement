<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="layout_br_deliverable">
        <div style="page-break-after: always;">
            <t t-call="business_requirement.layout_br_base" t-lang="lang" />
            <t t-set="o" t-value="o.with_context(lang=lang)" />

            <t t-if="o.deliverable_lines">
                <u><h3>Deliverable lines:</h3></u>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Product</th>
                            <th class="text-right">Qty</th>
                            <th class="text-right">UoM</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.deliverable_lines.sorted(key=lambda b: b.sequence)" t-as="deliverable">
                            <tr>
                                <th>Case</th>
                                <td colspan="2">
                                    <span t-field="deliverable.user_case" />
                                </td>
                                <th>Solution</th>
                                <td colspan="2">
                                    <span t-field="deliverable.proposed_solution" />
                                </td>
                            </tr>
                            <tr>
                                <td><span t-field="deliverable.name"/></td>
                                <td>
                                    [<span t-field="deliverable.product_id.default_code"/>]
                                    <span t-field="deliverable.product_id.product_tmpl_id.name"/>
                                </td>
                                <td class="text-right"><span t-field="deliverable.qty"/></td>
                                <td class="text-right"><span t-field="deliverable.uom_id.name"/></td>
                                <td class="text-right"><span t-field="deliverable.sale_price_unit" t-options='{"widget": "monetary", "display_currency": deliverable.currency_id}'/></td>
                                <td class="text-right"><span t-field="deliverable.price_total" t-options='{"widget": "monetary", "display_currency": deliverable.currency_id}'/></td>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="5"></td>
                                <td class="text-right"><strong><span t-field="o.total_revenue" t-options='{"widget": "monetary", "display_currency": o.partner_id.property_product_pricelist.currency_id}'/></strong></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
    </template>

    <template id="br_deliverable_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <div class="page">
                        <h1 class="text-center">Business Requirement Document</h1>
                        <t t-call="business_requirement_deliverable.layout_br_deliverable" t-lang="lang"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
