<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="group_business_requirement_estimation" model="res.groups">
            <field name="name">Business Requirement Estimation</field>
            <field
                name="implied_ids"
                eval="[(4, ref('business_requirement.group_business_requirement_user'))]"
            />
            <field
                name="category_id"
                ref="business_requirement_deliverable.module_category_business_requirement_cost"
            />
            <field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>
    </data>
    <!-- Portal -->
    <record id="brd_rule_portal" model="ir.rule">
        <field
            name="name"
        >BR/BRD: portal users: (portal and following project) or (portal and following task)</field>
        <field
            name="model_id"
            ref="business_requirement_deliverable.model_business_requirement_deliverable"
        />
        <field name="domain_force">[
           '&amp;',
               ('portal_published', '=', True),
               ('message_partner_ids', 'child_of', [user.partner_id.commercial_partner_id.id]),
               ('business_requirement_id.portal_published', '=', True),
               ('business_requirement_id.message_partner_ids', 'child_of', [user.partner_id.commercial_partner_id.id]),
       ]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
    </record>
</odoo>
